{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "lib": [ "es2015", "es2017", "dom", "es2015.iterable" ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
		"outDir": "../bundle-es2015",
		"declaration": true
    }
}